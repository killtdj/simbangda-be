{
  "name": "sicepat-petty-cash-api",
  "version": "1.0.0",
  "description": "Sicepat Petty Cash API",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch | pino-pretty",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "drakov:start": "drakov -f 'contracts/*.apib' -p 3100 --public --autoOptions --watch",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -f src/config/typeorm.config.cli",
    "db:seed:dev": "ts-node -r tsconfig-paths/register src/scripts/seeder.ts",
    "transform": "ts-node src/scripts/transform"
  },
  "author": "sicepat-dev",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/core": "^7.6.5",
    "@nestjs/platform-express": "^7.6.4",
    "@nestjs/swagger": "^4.7.11",
    "@nestjs/typeorm": "^7.1.5",
    "bull-board": "0.9.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "dotenv-extended": "^2.9.0",
    "dotenv-parse-variables": "^1.0.1",
    "lodash": "^4.17.20",
    "nestjs-pino": "^1.3.0",
    "pg": "^8.5.1",
    "pg-query-stream": "^4.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "request-context": "^2.0.0",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6",
    "tofo": "^1.4.4",
    "ts-simple-ast": "^21.0.4",
    "tsconfig-extends": "^1.0.1",
    "typeorm-query-builder-wrapper": "^1.0.18"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.6.5",
    "@types/dotenv-parse-variables": "^0.2.0",
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
